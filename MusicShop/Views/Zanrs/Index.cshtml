@model IEnumerable<MusicShop.Models.Zanr>

@{
    ViewData["Title"] = "Index";
}

<h1>Popis žanrova</h1>

<p>
    <a asp-action="Create">Dodaj novi žanr</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SifZanra">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.SifZanra">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.SifZanra">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
