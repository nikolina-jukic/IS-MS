@model MusicShopData.VrstaArtikla

@{
    ViewData["Title"] = "Edit";
}


<h4>Uredi podatke za @Html.DisplayName(Model.ImeVrste)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SifVrste" />
            <div class="form-group">
                <label asp-for="ImeVrste" class="control-label">Ime vrste</label>
                <input asp-for="ImeVrste" class="form-control" />
                <span asp-validation-for="ImeVrste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na popis vrsta artikala</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
